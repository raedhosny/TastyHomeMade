<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="5dp"


        >

        <LinearLayout
            android:id="@+id/Linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_style2">

            <ImageView
                android:id="@+id/ImageFood"
                android:layout_width="match_parent"
                android:layout_height="125.00dp"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/Linear1"
            android:layout_marginBottom="2px"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:background="#CCe5e5e5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3">

                <RatingBar
                    android:id="@+id/FoodRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:numStars="5"

                    android:rating="0"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ImageDeliverable"
                    android:layout_width="28.33dp"
                    android:layout_height="28.33dp"
                    android:src="@drawable/deliverable" />
            </LinearLayout>


            <TextView
                android:id="@+id/lblPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="0 ريال"
                android:textAlignment="center"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Linear1"
            android:layout_marginTop="5sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="أكل او مشروب 1"
                android:textAlignment="viewStart"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold">
                أكل او مشروب 1</TextView>

            <TextView
                android:id="@+id/lblTimeFromTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="وقت الطلب من 2 مساءا الي 4 مساءا"
                android:textAlignment="viewEnd"
                android:textColor="#000"
                android:textSize="10sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linear3"

            android:layout_marginLeft="10sp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"

            >

            <TextView
                android:id="@+id/lblDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|right"
                android:text="وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف "
                android:textAlignment="viewStart"
                android:textColor="#000" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>