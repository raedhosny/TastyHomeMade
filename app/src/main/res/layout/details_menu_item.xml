<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="5dp"


        >

        <LinearLayout
            android:id="@+id/Linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_style2"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="375px"
                android:id="@+id/ImageFood"
                ></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCe5e5e5"
            android:layout_marginLeft="2px"
            android:layout_marginRight="2px"
            android:layout_marginBottom="2px"
            android:id="@+id/Linear2"
            android:layout_alignBottom="@id/Linear1">

            <RatingBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FoodRating"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:rating="4"
                android:layout_weight="0.4"
                android:layout_gravity="center"

                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/ImageDeliverable"
                android:layout_width="85px"
                android:layout_height="85px"
                android:src="@drawable/deliverable"
                />
        </LinearLayout>



            <TextView
                android:id="@+id/lblPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3 ريال"
                android:textColor="#000"
                android:layout_weight="0.4"
                android:textAlignment="center"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Linear1"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:id="@+id/Linear3"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="أكل او مشروب 1"
                android:layout_weight="1"
                android:textAlignment="viewStart"
                android:id="@+id/lblName"
                >
                أكل او مشروب 1
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="وقت الطلب من 2 مساءا الي 4 مساءا"
                android:textSize="10sp"
                android:layout_weight="1"
                android:textAlignment="viewEnd"
                android:id="@+id/lblTimeFromTo"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Linear3"

            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10sp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|right"
                android:id="@+id/lblDescription"
                android:textColor="#000"
                android:textAlignment="viewStart"
                android:text="وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف وصف "
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>